<!DOCTYPE html>
    <%- include('partials/head') %> 
<body>
    
    <%- include('partials/navbar',{location:"shop"}) %>
    <%- include('partials/scrollToTop')%> 
    
    <!-- Carousel -->

    <section class="container col-lg-8 col-md-12 col-sm-12 mt-4">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% for(let a in [0,1,2]){ %>   
            <div class="carousel-item <%-a==0?'active':'' %> " style="cursor: pointer; position:relative;height:35vmax;">
                <img src="/image/agents/<%=Agents[a].photo%>" class="mt-3" style="position:absolute;width: 100%;min-height: 90%;" alt="..." onclick="location.href='/shop/<%=Agents[a]._id%>'"/>
            </div>
          <%}%> 
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <h1 id="featured-stores-heading">Popular Stationery Stores</h1>
    <div id="featured-stores" style="overflow: auto;">
      <% for(let agent of Agents){ if(agent.category.includes("Books")){ %>
        <div class="card mx-2" onclick="location.href='/shop/<%=agent._id%>'" style="display:inline-block;border-radius: 15px;min-width: 235px !important;cursor: pointer;">
          <div class="img text-center d-block mt-2" style="height: 150px;">
            <img src="/image/agents/<%=agent.photo %>" class="card-img-top p-2" style="width: 234px;height: 160px;" alt="Store Image"><br>
          </div>
          <div class="card-body d-flex justify-content-center align-items-center">
            <h4 class="card-title text-center" style="font-size: 105%;"><%=agent.shop %></h4>
          </div>                
        </div>
      <%}}%>
    </div>

    <h1 id="featured-stores-heading" class="mt-4">Popular General Stores</h1>
    <div id="featured-stores" style="overflow: auto;">
      <%let count=0; for(let agent of Agents){ if(count < 5 ){ count++; %>
        <div class="card mx-2 mb-2" onclick="location.href='/shop/<%=agent._id%>'" style="display:inline-block;border-radius: 15px;min-width: 235px !important;cursor: pointer;">
          <div class="img text-center d-block mt-2" style="height: 150px;">
            <img src="/image/agents/<%=agent.photo %>" class="card-img-top p-2" style="width: 234px;height: 160px;" alt="Store Image"><br>
          </div>
          <div class="card-body d-flex justify-content-center align-items-center">
            <h4 class="card-title text-center" style="font-size: 105%;"><%=agent.shop %></h4>
          </div>                
        </div>
      <%}}%>
    </div>
    
    <h1 id="featured-stores-heading" class="mt-4">Trending Products</h1>
    <div id="featured-stores" style="overflow: auto;">
      <% count=0; for(let product of Products){ if(count < 10){ count++; %>
        <div class="card mx-2 mb-2 text-center" style="display:inline-block;border-radius: 20px;min-width: 240px !important;">
          <div onclick="location.href='/product/<%=product._id%>'" style="cursor:pointer;">
            <h4 class="card-title" style="font-size: 105%; padding: 10px;"><%=product.name %></h4>
                
            <div class="img text-center d-block" style="height: 140px;">
                <img src="/image/products/<%=product.images[0]%>" class="card-img-top p-2" style="width: 130px;height: 130px;" alt="Store Image"><br>
            </div>
          </div>
          <div class="card-body" style="border-radius: 20%;">
            <div class="d-flex justify-content-between align-items-center">
              <h5 class="card-text fw-bold text-end mx-1"> â‚¹<%= product.price %> </h5>
              <form class="addc">
                <button type="button" class="px-2" onclick="fill('<%=product._id%>');" style="border-radius: 10px;margin-top: -10px;border: 0px; padding: 5px;"><i class="fa fa-shopping-cart"></i> Add </button>
              </form>
            </div>
          
            <div class="card-footer" onMouseOver="this.style.color='#0F0'" style="border-radius: 10px;" onMouseOut="this.style.color='#00F'">
              <button type="button" class="btn" onclick="location.href='/shop/<%=product.shopId%>'">Explore to Shop</button>
            </div>
          </div>
          
        </div>
      <%}}%> 
    </div>


    <footer>
        <%- include('partials/footer') %>
    </footer>   
    <input type="hidden" id="proId">
    <input type="hidden" id="aid">
  <script>
    function fill(proId){
      document.getElementById("proId").value=proId;
    }
    function fill1(aid){
      document.getElementById("aid").value=aid;
    }
  </script>
</body>
</html>