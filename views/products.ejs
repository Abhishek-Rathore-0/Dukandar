<!DOCTYPE html>
<%- include('partials/head') %> 
<body style="background-color:white" class="mx-5">
    <%- include('partials_agent/navbar') %>  

    <div class="navbar navbar-expand-lg navbar-light bg-none">
        <div class="container col-lg-9 col-md-12 col-sm-12">
          <table class="table text-center table-dark table-hover" id="userData">
            <thead>
              
      
                <tr style="height: 30px; vertical-align: middle">
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col">Product Image</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Product Description</th>
                    <th scope="col">Unit Price</th>

                    <th scope="col">Quantity</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                <% let i=1; %> 
                <% for(let product of Products){ %> 
                  <th scope="row"><span class="no"><%=i %> </span></th>
                  <% i++; %> 
                  <td style="text-transform: capitalize;"><%=product.category %> </td>
                  
                  <td><img src="/image/products/<%=product.images[0]%>" style="width: 100px;height: 100px;"></td>
                  <td><%=product.name %></td>
                  <td><%=product.description %></td>
                  
                  <td>â‚¹<%=product.price %></td>
                  <td><%=product.quantity %></td>
                  
                    <td>
                      <button type="button" class="w-100 mt-1.7 btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#updateProduct">
                        <i class="fas fa-edit"></i>
                      </button>
                    </td>
                </tr>
                <% } %> 
              </tbody>
            </table>
          </div>   
        </div>
      




    <input
      type="button"
      class="btn btn-success"
      value="Add Product"
      data-bs-toggle="modal" data-bs-target="#addProduct" 
    />


    <section class="updateProduct">
      <div class="modal fade" id="updateProduct" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1" >
          <div class="modal-dialog modal-dialog-centered" style="max-width: 600px;">
            <div class="modal-content" style="border-radius: 20px;">
              <div class="modal-header" style="border-radius: 20px; background-color: #eee;">
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body" >
                  
              </div>
             
            </div>
          </div>
      </div>  
    </section>
    

</body>